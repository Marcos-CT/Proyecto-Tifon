#@title üîß Setup Proyecto Tif√≥n (clonado + deps + PYTHONPATH, robusto)
import os, sys, subprocess, shutil, pathlib

REPO_URL   = "https://github.com/Marcos-CT/Proyecto-Tifon.git"
PROJECT_DIR = pathlib.Path("/content/Proyecto-Tifon")
SRC_DIR     = PROJECT_DIR / "src"

def run(cmd, **kw):
    print("‚ûú", " ".join(cmd))
    return subprocess.run(cmd, check=False, **kw)

# 1) Clonar o actualizar de forma segura
if PROJECT_DIR.exists():
    # ¬øEs un repo Git v√°lido?
    if not (PROJECT_DIR / ".git").exists():
        print("‚ö†Ô∏è Existe /content/Proyecto-Tifon pero no es un repo Git. Lo borro y reclono.")
        shutil.rmtree(PROJECT_DIR, ignore_errors=True)
        run(["git", "clone", REPO_URL, str(PROJECT_DIR)])
    else:
        print("Repo ya existe, actualizando‚Ä¶")
        run(["git", "-C", str(PROJECT_DIR), "fetch", "--all", "--prune"])
        run(["git", "-C", str(PROJECT_DIR), "pull", "--ff-only"])
else:
    print("Clonando repo‚Ä¶")
    run(["git", "clone", REPO_URL, str(PROJECT_DIR)])

# 2) Instalar dependencias (usa el mismo int√©rprete de Colab)
req = PROJECT_DIR / "requirements.txt"
if req.exists():
    print("Instalando dependencias‚Ä¶")
    subprocess.check_call([sys.executable, "-m", "pip", "install", "-q", "-r", str(req)])
else:
    print("‚ö†Ô∏è No hay requirements.txt; crea uno para fijar dependencias comunes.")

# 3) A√±adir src al PYTHONPATH
if SRC_DIR.exists():
    sys.path.append(str(SRC_DIR))
    print("PYTHONPATH ‚úî", SRC_DIR)
else:
    print("‚ö†Ô∏è No existe src/. Crea src/proyecto_tifon para c√≥digo reutilizable.")

print("‚úÖ Listo. Carpeta de trabajo:", PROJECT_DIR)

